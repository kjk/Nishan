{
  "compilerOptions": {
    "lib": [
      "ESNext",
      "dom",
    ],
    "module": "commonjS",
    "target": "es2019",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "watch": false,
    "declaration": false,
    "sourceMap": false,
    "noUnusedLocals": true,
    "incremental": false,
    "experimentalDecorators": true
  },
  "include": [
    "./Nishan.ts"
  ],
  "exclude": [
    "./node_modules",
    "workflows",
    "docs",
  ],
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  }
}